@model KitchensWithZest.Models.Photo

@{
    ViewBag.Title = "Edit";
}

<h2>Update photo for Gallery</h2>


@using (Html.BeginForm("Edit", "GalleryPhotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PhotoId)
        @Html.HiddenFor(model => model.GalleryId)

        <div class="form-group">
            @Html.LabelFor(model => model.GalleryId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.GalleryId 
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhotoId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.PhotoId
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhotoPath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PhotoFile, "PhotoFile", new { Type = "file", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhotoPath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Gallery Detail", "Details", "Galleries", new { id = Model.GalleryId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
