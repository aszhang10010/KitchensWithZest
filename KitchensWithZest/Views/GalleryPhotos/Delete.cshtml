@model KitchensWithZest.Models.Photo

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PhotoPath)
        </dt>

        <dd>
            <img src="@Url.Content(Model.PhotoPath)" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gallery.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gallery.Title)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Gallery Detail", "Details", "Galleries", new { id = Model.GalleryId }, null)
        </div>
    }
</div>
